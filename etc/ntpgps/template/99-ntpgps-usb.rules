[Begin:1]
Filter:ID_VENDOR_ID=0403
Filter:ID_MODEL_ID=6001
# FT232/FTDI USB-Serial adapter, connected to GPS module with PPS
SUBSYSTEM=="tty", KERNEL=="ttyUSB[0-9]*", \
__SERIAL__
    ATTRS{idVendor}=="0403", ATTRS{idProduct}=="6001", \
    PROGRAM="/usr/local/bin/ntpgps-gpsnum.sh %k", SYMLINK+="gps%c", TAG+="systemd", \
    ENV{SYSTEMD_WANTS}="ntpgps-gps-pps@%k.service", \
    MODE="0666", ENV{ID_NTPGPS}="1"
[End:1]

