################################################################################
# Handles creation and removal of /dev/gpsppsN for NTP
#
ACTION=="add", SUBSYSTEM=="pps", \
    IMPORT{program}="/usr/local/bin/ntpgps-gpspps-symlink.sh %k", \
    SYMLINK+="$env{GPSPPSNAME}", \
    MODE="0666"

